-- search by patient id
SELECT *
FROM patients
WHERE patient_id = 1;

-- search by phone number
SELECT *
FROM patients
WHERE phone = '9876543210';

-- update patient information 
UPDATE patients
SET
    address = 'Bangalore',
    email = 'rahul_new@gmail.com',
    blood_group = 'A+'
WHERE patient_id = 1;

-- before update 
| patient_id | name  | phone      | address | blood_group |
| ---------- | ----- | ---------- | ------- | ----------- |
| 1          | Rahul | 9876543210 | Delhi   | O+          |


-- after update 
| patient_id | name  | phone      | address   | blood_group |
| ---------- | ----- | ---------- | --------- | ----------- |
| 1          | Rahul | 9876543210 | Bangalore | A+          |
